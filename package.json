{
  "name": "dom-scripter",
  "version": "1.1.2",
  "description": "Easily inject scripts, stylesheets and jsonld documents into your html document with this javascript module.",
  "main": "dist/index.js",
  "scripts": {
    "release": "bash dev/push.sh",
    "builds": "npm run build && npm run build-umd && npm run build-umd-polyfilled",
    "build": "BABEL_ENV=development ./node_modules/.bin/minify ./source -d ./dist && ls -lR ./dist",
    "build-umd": "BABEL_ENV=development ./node_modules/.bin/browserify -s Scripter ./source/index.js -o ./dist/umd.js && ./node_modules/.bin/minify ./dist/umd.js --out-file ./dist/umd.js",
    "build-umd-polyfilled": "mkdir -p ./source-compiled && BABEL_ENV=production ./node_modules/.bin/babel ./source -d ./source-compiled && ./node_modules/.bin/browserify -s Scripter ./source-compiled/index.js -o ./dist/umd.polyfilled.js && ./node_modules/.bin/minify ./dist/umd.polyfilled.js --out-file ./dist/umd.polyfilled.js && rm -rf ./source-compiled",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muratgozel/dom-scripter.git"
  },
  "keywords": [
    "javascript",
    "dom",
    "jsonld",
    "injection"
  ],
  "author": "Murat GÃ¶zel <murat@gozel.com.tr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muratgozel/dom-scripter/issues"
  },
  "homepage": "https://github.com/muratgozel/dom-scripter#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-minify": "^0.5.1",
    "babel-preset-minify": "^0.5.1",
    "browserify": "^16.5.0",
    "core-js": "^3.6.4"
  }
}